# Estructura-de-datos-321180674
Estructura de Datos


Recursividad 
#include <stdio.h>
#include <stdlib.h>

long long int factRecursion(long long int n) {
	if (n < 0) return 0;
	if (n <= 1) return 1;
	return n * factRecursion(n-1);
}

int main(int argc, char **argv) {
	long long int num = 0;
	char *endptr = NULL;
	if (argc < 2) {
		fprintf(stderr, "Usage: %s [number]\n", argv[0]);
		return 1;
	}
	num = strtol(argv[1], &endptr, 10);
	if (num == 0 && endptr == argv[1]) {
		fprintf(stderr, "Error: \"%s\" is not a number\n", argv[1]);
		return 1;
	}
	printf("Recursive:\t%lld! = %lld\n", num, factRecursion(num));
	return 0;
}


Arreglo cuenta 

#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define AMOUNT 10 // >= 10

int main(int argc, char **argv) {
	int evens[AMOUNT];
	size_t id_len;
	if (argc < 2) {
		fprintf(stderr, "Usage: %s [number]\n"
			"You need to pass an account number.\n", argv[0]);
		return 1;
	}
	id_len = strlen(argv[1]);
	if (id_len == 0 || !isdigit(argv[1][id_len-1])) {
		fprintf(stderr, "Error: \"%s\" is not a valid ID number, "
			"the last character is not a number.\n", argv[1]);
		return 1;
	}
	size_t idx = argv[1][id_len-1] - '0'; // Turn digit to numeric value
	for (size_t i = 0; i < AMOUNT; i++) {
		// Generate even numbers in reverse order
		evens[i] = AMOUNT*2 - i*2;
	}
	evens[idx] = -1;
	for (size_t i = 0; i < AMOUNT; i++) {
		printf("| %d ", evens[i]);
	}
	printf("|\n");
	return 0;
}

